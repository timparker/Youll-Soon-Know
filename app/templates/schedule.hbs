<div class="featured-wrapper">
    <section class="featured center">
        <article>
            <div class="body">
                  <p>Tune in at <a href="http://nts.live" class="feature-link" target="_blank">nts.live</a> to listen to the live broadcasts</p>
            </div>
        </article>
    </section>
</div>
<!-- padding: 0 0 1.25rem; -->
<div class="writingwrapper">
    <section class="writinglist">
      <div class="textspace">
        <aside><h2>Schedule</h2></aside>
        <div>
          <ul class="tablelist">
            {{#each latestSchedule as |schedule|}}
              	<li class="schedule-list">
                    <a>
                        <b class="label">{{schedule.title}}</b>
                        <em class="detail">{{moment-format schedule.date "Do MMM YYYY"}} {{schedule.start}} - {{schedule.end}} GMT</em>
                    </a>
                </li>
            {{/each}}
          </ul>
        </div>
      </div>
    </section>
</div>

