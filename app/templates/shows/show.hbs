<div class="featured-wrapper">
    <section class="featured center">
        <article>
            <div class="body">
                  <img src="images/{{show.created}}.png" class="fullimg" id="fullimg" style="width: 300px; height: 300px; margin: 20px auto;">

                  <span {{action "play"}}>play show</span>
            </div>
        </article>
    </section>
</div>

<div class="writingwrapper">
  <section class="text">
      <article>
          <div class="body">
              <p>{{show.title}}</p>
              <p>Aired: {{moment-format show.created "Do MMMM YYYY"}}</p>
              {{#if show.text}}
                <p>{{show.text}}</p>
              {{/if}}
              <p>NTS Website: {{show.nts}}</p>
              <p><a href="{{show.download}}">Download</a></p>
              <p>{{#link-to "shows.index"}}All shows{{/link-to}}</p>
          </div>
      </article>
  </section>
</div>
